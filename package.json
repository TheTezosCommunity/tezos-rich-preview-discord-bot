{
    "name": "discord-tezos-previews",
    "version": "1.0.0",
    "type": "module",
    "description": "A Discord bot that provides rich NFT previews for Tezos marketplace links",
    "main": "dist/index.js",
    "scripts": {
        "build": "bun build src/bot.ts --outdir dist --target bun",
        "start": "bun run dist/bot.js",
        "dev": "bun --watch src/bot.ts",
        "pm2:start": "pm2 start ecosystem.config.cjs",
        "pm2:stop": "pm2 stop tezos-bot",
        "pm2:restart": "pm2 restart tezos-bot",
        "pm2:delete": "pm2 delete tezos-bot",
        "pm2:logs": "pm2 logs tezos-bot",
        "pm2:status": "pm2 status",
        "deploy": "bun run build && bun run pm2:restart",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "type-check": "tsc --noEmit"
    },
    "keywords": [
        "discord",
        "bot",
        "tezos",
        "nft",
        "preview",
        "objkt"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "discord.js": "^14.14.1",
        "dotenv": "^16.3.1",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.5",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "eslint": "^8.56.0",
        "pm2": "^6.0.13",
        "typescript": "^5.3.3"
    },
    "engines": {
        "bun": ">=1.0.0"
    }
}
